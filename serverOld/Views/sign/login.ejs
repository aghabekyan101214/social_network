<div class="row">
    <form style="position:relative; left: 50%; transform: translateX(-50%)" class="col s3" method="POST" action="/check-login">
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <input name="email" id="icon_prefix" type="text" class="validate" value="<% if(fields && fields.email) { %> <%= fields.email %> <% } %>">
                <label for="icon_prefix">Email</label>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">fingerprint</i>
                <input id="icon_telephone" type="tel" name="password" class="validate">
                <label for="icon_telephone">Password</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
        </button>
    </form>
</div>
